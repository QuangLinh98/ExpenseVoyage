@model ExpenseVoyage.DTOs.ItineraryExpenseViewModel
@{
    ViewData["Title"] = "Create  Expenses";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create Itineraries and Expenses</h2>

