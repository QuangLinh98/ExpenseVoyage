@model IEnumerable<ExpenseVoyage.Models.Tour>

@{
    ViewBag.Title = "Tour List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tour List</h2>
<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="fas fa-plus"></i> Create New
</a>
<table class="table">
    <thead>
        <tr>
            <th>Tour ID</th>
            <th>Departure</th>
            <th>NameTour</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Total Budget</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TourId</td>
                <td>@item.Departure</td>
                <td>@item.NameTour</td>
                <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                <td>@item.Totalbudget.ToString("N2")</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.TourId" class="btn btn-danger">Delete</a>
                    <a asp-action="Edit" asp-route-id="@item.TourId" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
