@model Tour

@{
    ViewData["Title"] = "Edit Tour";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Edit Tour</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div class="form-row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="Departure" class="font-weight-bold"></label>
                    <input asp-for="Departure" class="form-control" placeholder="Enter departure location" />
                    <span asp-validation-for="Departure" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="NameTour" class="font-weight-bold"></label>
                    <input asp-for="NameTour" class="form-control" placeholder="Enter NameTour " />
                    <span asp-validation-for="NameTour" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="StartDate" class="font-weight-bold"></label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="EndDate" class="font-weight-bold"></label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="Totalbudget" class="font-weight-bold"></label>
                    <input asp-for="Totalbudget" type="number" step="0.01" class="form-control" placeholder="Enter total budget" />
                    <span asp-validation-for="Totalbudget" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <input type="submit" class="btn btn-primary btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

