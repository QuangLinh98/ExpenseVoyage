@model IEnumerable<Destinations>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@* <partial name="_Notification" /> *@
<div class="row">
    <h2>Destinations List</h2>
    <a asp-action="Create" class="btn btn-primary">Create a new Product</a>

    <form asp-action="Index" method="get" class="form-inline mb-3" onsubmit="return confirmSearch()">
    <div class="form-group mr-2">
       @*  <input type="text" name="searchTerm" class="form-control" placeholder="Search by name , PRICE" value="@ViewContext.HttpContext.Request.Query["searchTerm"]" /> *@
            <div class="form-group col-md-6">
                <label for="DestinationId" class="font-weight-bold">Destination</label>
                <select asp-items="@ViewBag.DestinationNAME" name="searchTerm" class="form-control">
                    <option value="@ViewContext.HttpContext.Request.Query["searchTerm"]">Select Destination</option>
                </select>
      
            </div>
    </div>
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-search"></i> Search
    </button>
</form>

    <table class="table">
        <thead>
            <tr>
                <th>DestinationId</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DestinationId</td>
                    <td>@item.Name</td>
                    <td >@item.Description</td>
                    <td>
                        @if (item.DestinationImages != null && item.DestinationImages.Count > 0)
                        {
                            foreach (var image in item.DestinationImages)
                            {
                                <img src="~/Uploads/@image.ImageUrl" width="100" class="img-thumbnail" style="margin-right:10px;" />
                            }
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>

                    <td>
                        <a asp-action="Delete" asp-route-id="@item.DestinationId"
                           class="btn btn-danger">Delete</a>
                        <a asp-action="Edit" asp-route-id="@item.DestinationId"
                           class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    function confirmSearch() {
        const searchTerm = document.querySelector('input[name="searchTerm"]').value;
        const noRecords = @(!Model.Any()).ToString().ToLower(); // Kiểm tra có bản ghi nào không

        if (noRecords && searchTerm) {
            return confirm("No records found for your search. Do you want to reset the search?");
        }
        return true; // Chấp nhận tìm kiếm nếu có kết quả
    }
</script>