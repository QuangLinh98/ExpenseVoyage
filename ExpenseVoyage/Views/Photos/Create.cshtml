@model Photos

@{
    ViewData["Title"] = "Create Photos";

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<h2>Create Photos</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-row mb-3">
        <div class="form-group col-md-6">
            <label for="DestinationId" class="font-weight-bold">Destination</label>
            <select asp-for="DestinationId" asp-items="@ViewBag.DestinationID" class="form-control">
                <option value="">Select Destination</option>
            </select>
            <span asp-validation-for="DestinationId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row mb-3">
        <div class="form-group col-md-6">
            <label for="DestinationId" class="font-weight-bold">Destination</label>
            <select asp-for="DestinationName" asp-items="@ViewBag.DestinationNAME" class="form-control">
                <option value="">Select Destination</option>
            </select>
            <span asp-validation-for="DestinationName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Caption" class="control-label"></label>
        <input asp-for="Caption" class="form-control" />
        <span asp-validation-for="Caption" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="formFiles" class="control-label">Upload Images</label>
        <input type="file" id="formFiles" name="formFiles" multiple class="form-control" />
        <small class="form-text text-muted">You can select multiple images.</small>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>



